
var alterAccount = def() {
	var amount = 100;
	return def(alter) {
		amount = amount + alter;
		return amount;
	};
}

var deposit = alterAccount();
var withdraw = alterAccount();
println ( deposit(10) ); // prints 110
println ( deposit(10) ); // prints 120
println( withdraw(-10) ); // prints 90

deposit = null;
withdraw = null;

var test = alterAccount();
println( test(1) ); // prints 101