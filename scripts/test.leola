/*	Factorial */
var fact = def (n) {
	if (n <= 1) return 1
	else return (n * fact(n-1))
}

println ( fact(10) );


/* Factorial */
var fact2 = def (n) {
	var result = 1;
	while( n > 1 ) {
	   result = result * n;
	   n = n - 1;
	}
	return result;
}

println ( fact2(1) ); // prints 1.0
println ( fact2(10) ); // prints 3628800.0



